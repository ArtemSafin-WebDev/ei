{{#extend "layout-no-footer"}}
{{#content "main"}}

<section class="lots-on-the-map">
    <div class="lots-on-the-map__map js-lots-map">

    </div>
    <div class="container">
        <div class="lots-on-the-map__filters">
            <div class="lots-on-the-map__filters-main">
                <div class="lots-on-the-map__filters-main-heading">
                    Фильтр

                    <a href="catalog.html" class="lots-on-the-map__filters-main-close">
                        <svg width="22" height="22" aria-hidden="true" class="icon-cross">
                            <use xlink:href="#cross"></use>
                        </svg>
                    </a>
                </div>

                <form action="/" method="GET" class="catalog-filters__form js-catalog-filters-form"
                    data-total-found="240">
                    <div class="catalog-filters__form-group catalog-filters__form-group--mobile-sort">
                        <h4 class="catalog-filters__form-group-heading js-accordion-btn">
                            Сортировать
                        </h4>
                        <div class="catalog-filters__accordion-content js-accordion-content">
                            <div
                                class="catalog-filters__results-btn-wrapper catalog-filters__results-btn-wrapper--checkbox">
                                <label class="checkbox catalog-filters__radio">
                                    <input type="radio" name="sortby" class="radio__input" checked />
                                    <span class="radio__checkmark"></span>
                                    <span class="radio__text">
                                        Сначала дешевые
                                    </span>
                                </label>
                            </div>
                            <div
                                class="catalog-filters__results-btn-wrapper catalog-filters__results-btn-wrapper--checkbox">
                                <label class="checkbox catalog-filters__radio">
                                    <input type="radio" name="sortby" class="radio__input" />
                                    <span class="radio__checkmark"></span>
                                    <span class="radio__text">
                                        Сначала подороже
                                    </span>
                                </label>
                            </div>
                            <div
                                class="catalog-filters__results-btn-wrapper catalog-filters__results-btn-wrapper--checkbox">
                                <label class="checkbox catalog-filters__radio">
                                    <input type="radio" name="sortby" class="radio__input" />
                                    <span class="radio__checkmark"></span>
                                    <span class="radio__text">
                                        Более новые
                                    </span>
                                </label>
                            </div>
                            <div
                                class="catalog-filters__results-btn-wrapper catalog-filters__results-btn-wrapper--checkbox">
                                <label class="checkbox catalog-filters__radio">
                                    <input type="radio" name="sortby" class="radio__input" />
                                    <span class="radio__checkmark"></span>
                                    <span class="radio__text">
                                        Более старые
                                    </span>
                                </label>
                            </div>
                            <div
                                class="catalog-filters__results-btn-wrapper catalog-filters__results-btn-wrapper--checkbox">
                                <label class="checkbox catalog-filters__radio">
                                    <input type="radio" name="sortby" class="radio__input" />
                                    <span class="radio__checkmark"></span>
                                    <span class="radio__text">
                                        Проверенный лот
                                    </span>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="catalog-filters__form-group catalog-filters__form-group--price">
                        <h4 class="catalog-filters__form-group-heading js-accordion-btn">
                            Цена, ₽
                        </h4>
                        <div class="catalog-filters__accordion-content js-accordion-content">
                            <div class="catalog-filters__results-btn-wrapper">
                                <div class="catalog-filters__form-price-range">
                                    <div class="catalog-filters__form-price-range-input-wrapper">
                                        <input type="tel" name="from"
                                            class="catalog-filters__form-price-range-input js-numeric-input"
                                            placeholder="от 30 000" />
                                        <button type="button"
                                            class="catalog-filters__form-price-range-input-clear-btn js-clear-input">
                                            <svg width="12" height="12" aria-hidden="true" class="icon-cross">
                                                <use xlink:href="#cross"></use>
                                            </svg>
                                        </button>
                                    </div>
                                    <div class="catalog-filters__form-price-range-input-wrapper">
                                        <input type="tel" name="to"
                                            class="catalog-filters__form-price-range-input js-numeric-input"
                                            placeholder="до 7 280 990" />
                                        <button type="button"
                                            class="catalog-filters__form-price-range-input-clear-btn js-clear-input">
                                            <svg width="12" height="12" aria-hidden="true" class="icon-cross">
                                                <use xlink:href="#cross"></use>
                                            </svg>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="catalog-filters__form-group">
                        <h4 class="catalog-filters__form-group-heading js-accordion-btn">
                            Типы лотов
                        </h4>
                        <div class="catalog-filters__accordion-content js-accordion-content">
                            <div
                                class="catalog-filters__results-btn-wrapper catalog-filters__results-btn-wrapper--checkbox">
                                <label class="checkbox catalog-filters__checkbox">
                                    <input type="checkbox" name="type" class="checkbox__input" checked />
                                    <span class="checkbox__checkmark">
                                        <svg width="15" height="12" aria-hidden="true" class="icon-checkmark">
                                            <use xlink:href="#checkmark"></use>
                                        </svg>
                                    </span>
                                    <span class="checkbox__text">
                                        Банкротное имущество
                                    </span>
                                </label>
                            </div>
                            <div
                                class="catalog-filters__results-btn-wrapper catalog-filters__results-btn-wrapper--checkbox">
                                <label class="checkbox catalog-filters__checkbox">
                                    <input type="checkbox" name="type" class="checkbox__input" />
                                    <span class="checkbox__checkmark">
                                        <svg width="15" height="12" aria-hidden="true" class="icon-checkmark">
                                            <use xlink:href="#checkmark"></use>
                                        </svg>
                                    </span>
                                    <span class="checkbox__text">
                                        Арестованное
                                    </span>
                                </label>
                            </div>
                            <div
                                class="catalog-filters__results-btn-wrapper catalog-filters__results-btn-wrapper--checkbox">
                                <label class="checkbox catalog-filters__checkbox">
                                    <input type="checkbox" name="type" class="checkbox__input" />
                                    <span class="checkbox__checkmark">
                                        <svg width="15" height="12" aria-hidden="true" class="icon-checkmark">
                                            <use xlink:href="#checkmark"></use>
                                        </svg>
                                    </span>
                                    <span class="checkbox__text">
                                        Имущество организаций
                                    </span>
                                </label>
                            </div>
                            <div
                                class="catalog-filters__results-btn-wrapper catalog-filters__results-btn-wrapper--checkbox">
                                <label class="checkbox catalog-filters__checkbox">
                                    <input type="checkbox" name="type" class="checkbox__input" disabled />
                                    <span class="checkbox__checkmark">
                                        <svg width="15" height="12" aria-hidden="true" class="icon-checkmark">
                                            <use xlink:href="#checkmark"></use>
                                        </svg>
                                    </span>
                                    <span class="checkbox__text">
                                        Муниципальное имущество
                                    </span>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="catalog-filters__form-group">
                        <h4 class="catalog-filters__form-group-heading js-accordion-btn">
                            Регион
                        </h4>
                        <div class="catalog-filters__accordion-content js-accordion-content">
                            <div class="catalog-filters__desktop-region">
                                <div
                                    class="catalog-filters__results-btn-wrapper catalog-filters__results-btn-wrapper--checkbox">
                                    <label class="checkbox catalog-filters__checkbox">
                                        <input type="checkbox" name="type" class="checkbox__input" checked />
                                        <span class="checkbox__checkmark">
                                            <svg width="15" height="12" aria-hidden="true" class="icon-checkmark">
                                                <use xlink:href="#checkmark"></use>
                                            </svg>
                                        </span>
                                        <span class="checkbox__text">
                                            Москва
                                        </span>
                                    </label>
                                </div>
                                <div
                                    class="catalog-filters__results-btn-wrapper catalog-filters__results-btn-wrapper--checkbox">
                                    <label class="checkbox catalog-filters__checkbox">
                                        <input type="checkbox" name="type" class="checkbox__input" />
                                        <span class="checkbox__checkmark">
                                            <svg width="15" height="12" aria-hidden="true" class="icon-checkmark">
                                                <use xlink:href="#checkmark"></use>
                                            </svg>
                                        </span>
                                        <span class="checkbox__text">
                                            Московская область
                                        </span>
                                    </label>
                                </div>
                                <div
                                    class="catalog-filters__results-btn-wrapper catalog-filters__results-btn-wrapper--checkbox">
                                    <label class="checkbox catalog-filters__checkbox">
                                        <input type="checkbox" name="type" class="checkbox__input" />
                                        <span class="checkbox__checkmark">
                                            <svg width="15" height="12" aria-hidden="true" class="icon-checkmark">
                                                <use xlink:href="#checkmark"></use>
                                            </svg>
                                        </span>
                                        <span class="checkbox__text">
                                            Санкт-Петербург
                                        </span>
                                    </label>
                                </div>
                                <div
                                    class="catalog-filters__results-btn-wrapper catalog-filters__results-btn-wrapper--checkbox">
                                    <label class="checkbox catalog-filters__checkbox">
                                        <input type="checkbox" name="type" class="checkbox__input" />
                                        <span class="checkbox__checkmark">
                                            <svg width="15" height="12" aria-hidden="true" class="icon-checkmark">
                                                <use xlink:href="#checkmark"></use>
                                            </svg>
                                        </span>
                                        <span class="checkbox__text">
                                            Республика Татарстан
                                        </span>
                                    </label>
                                </div>
                                <div class="catalog-filters__show-more-content js-show-more-content">
                                    <div
                                        class="catalog-filters__results-btn-wrapper catalog-filters__results-btn-wrapper--checkbox">
                                        <label class="checkbox catalog-filters__checkbox">
                                            <input type="checkbox" name="type" class="checkbox__input" />
                                            <span class="checkbox__checkmark">
                                                <svg width="15" height="12" aria-hidden="true" class="icon-checkmark">
                                                    <use xlink:href="#checkmark"></use>
                                                </svg>
                                            </span>
                                            <span class="checkbox__text">
                                                Республика Марий Эл
                                            </span>
                                        </label>
                                    </div>
                                </div>
                                <button class="catalog-filters__show-more js-show-more">
                                    Показать все
                                </button>
                            </div>
                            <div class="catalog-filters__mobile-region">
                                <select multiple name="mobileregion" class="js-mobile-region">
                                    <option value="">Найти регион</option>
                                    <option value="Moscow">Москва</option>
                                    <option value="Moscow Region">Московская область</option>
                                    <option value="Peter">Санкт-Петербург</option>
                                    <option value="Tatarstan">Татарстан</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="catalog-filters__form-group">
                        <h4 class="catalog-filters__form-group-heading js-accordion-btn">
                            Виды торгов
                        </h4>
                        <div class="catalog-filters__accordion-content js-accordion-content">
                            <div
                                class="catalog-filters__results-btn-wrapper catalog-filters__results-btn-wrapper--checkbox">
                                <label class="checkbox catalog-filters__radio">
                                    <input type="radio" name="selltype" class="radio__input" checked />
                                    <span class="radio__checkmark"></span>
                                    <span class="radio__text">
                                        Аукцион
                                    </span>
                                </label>
                            </div>
                            <div
                                class="catalog-filters__results-btn-wrapper catalog-filters__results-btn-wrapper--checkbox">
                                <label class="checkbox catalog-filters__radio">
                                    <input type="radio" name="selltype" class="radio__input" />
                                    <span class="radio__checkmark"></span>
                                    <span class="radio__text">
                                        Конкурс
                                    </span>
                                </label>
                            </div>
                            <div
                                class="catalog-filters__results-btn-wrapper catalog-filters__results-btn-wrapper--checkbox">
                                <label class="checkbox catalog-filters__radio">
                                    <input type="radio" name="selltype" class="radio__input" />
                                    <span class="radio__checkmark"></span>
                                    <span class="radio__text">
                                        Продажа без объявления цены
                                    </span>
                                </label>
                            </div>
                            <div
                                class="catalog-filters__results-btn-wrapper catalog-filters__results-btn-wrapper--checkbox">
                                <label class="checkbox catalog-filters__radio">
                                    <input type="radio" name="selltype" class="radio__input" />
                                    <span class="radio__checkmark"></span>
                                    <span class="radio__text">
                                        Публичное предложение
                                    </span>
                                </label>
                            </div>
                            <div
                                class="catalog-filters__results-btn-wrapper catalog-filters__results-btn-wrapper--checkbox">
                                <label class="checkbox catalog-filters__radio">
                                    <input type="radio" name="selltype" class="radio__input" />
                                    <span class="radio__checkmark"></span>
                                    <span class="radio__text">
                                        Специализированный аукцион
                                    </span>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="catalog-filters__form-group catalog-filters__form-group--photo">
                        <div
                            class="catalog-filters__results-btn-wrapper catalog-filters__results-btn-wrapper--checkbox">
                            <label class="checkbox catalog-filters__checkbox">
                                <input type="checkbox" name="type" class="checkbox__input" checked />
                                <span class="checkbox__checkmark">
                                    <svg width="15" height="12" aria-hidden="true" class="icon-checkmark">
                                        <use xlink:href="#checkmark"></use>
                                    </svg>
                                </span>
                                <span class="checkbox__text">
                                    Только с фото
                                </span>
                            </label>
                        </div>
                        <div
                            class="catalog-filters__results-btn-wrapper catalog-filters__results-btn-wrapper--checkbox">
                            <label class="checkbox catalog-filters__checkbox">
                                <input type="checkbox" name="type" class="checkbox__input" />
                                <span class="checkbox__checkmark">
                                    <svg width="15" height="12" aria-hidden="true" class="icon-checkmark">
                                        <use xlink:href="#checkmark"></use>
                                    </svg>
                                </span>
                                <span class="checkbox__text">
                                    Только с отчетом
                                </span>
                            </label>
                        </div>
                    </div>
                    <button type="submit" class="btn catalog-filters__form-submit">
                        Найти
                    </button>
                    <button type="button" class="catalog-filters__save-search">
                        <span class="catalog-filters__save-search-content">
                            <svg width="28" height="28" aria-hidden="true" class="icon-favourites">
                                <use xlink:href="#favourites"></use>
                            </svg>
                            Сохранить поиск
                        </span>
                    </button>
                    <button class="catalog-filters__form-reset" type="reset">
                        Очистить фильтр
                    </button>
                </form>

            </div>
        </div>
    </div>
</section>


{{/content}}
{{/extend}}