{{#extend "layout"}}
{{#content "main"}}

<section class="change-data">
    <div class="container">
        <div class="inner-container">
            <div class="user">
                <div class="user__layout">
                    <div class="user__sidebar">
                        {{> user-panel }}
                    </div>
                    <div class="user__main">
                        <h1 class="main-heading user__heading">
                            Изменить данные
                        </h1>
                        <form action="/" method="POST" class="user__change-form" data-need-validation>
                            <div class="user__change-form-row">
                                <label for="firstname" class="user__change-form-label">
                                    Имя
                                </label>
                                <div class="user__change-form-input-wrapper">
                                    <input type="text" name="firstname" id="firstname" class="user__change-form-input"
                                        required placeholder="Имя">
                                </div>
                            </div>
                            <div class="user__change-form-row">
                                <label for="lastname" class="user__change-form-label">
                                    Фамилия
                                </label>
                                <div class="user__change-form-input-wrapper">
                                    <input type="text" name="lastname" id="lastname" class="user__change-form-input"
                                        required placeholder="Фамилия">
                                </div>
                            </div>
                            <div class="user__change-form-row">
                                <label for="city" class="user__change-form-label">
                                    Город
                                </label>
                                <div class="user__change-form-input-wrapper" id="city-error">
                                    <select name="city" id="city"
                                        class="user__change-form-select js-change-detail-select" required data-parsley-class-handler="#city-error" data-parsley-errors-container="#city-error" data-trigger="change">
                                        <option value="">Выберите город</option>
                                        <option value="kazan">Казань</option>
                                        <option value="moscow">Москва</option>
                                    </select>
                                </div>
                            </div>

                            <div class="user__change-form-row">
                                <label for="phone" class="user__change-form-label">
                                    Телефон
                                    <span class="user__change-form-label-remark">
                                        Не указывается на сайте
                                    </span>
                                </label>
                                <div class="user__change-form-input-wrapper">
                                    <input type="tel" name="phone" id="phone"
                                        class="user__change-form-input js-phone-input" data-parsley-phone required
                                        placeholder="+7 (XXX) XXXX-XX-XX">
                                </div>
                            </div>

                            <div class="user__change-form-row">
                                <label for="email" class="user__change-form-label">
                                    Фамилия
                                </label>
                                <div class="user__change-form-input-wrapper">
                                    <input type="email" name="email" id="email" class="user__change-form-input" required
                                        placeholder="Электронная почта">
                                    <label class="user__change-form-checkbox">
                                        <input type="checkbox" name="type" value="Y"
                                            class="user__change-form-checkbox-input">
                                        <span class="user__change-form-checkbox-mark">
                                            <svg width="12" height="12" aria-hidden="true" class="icon-checkmark">
                                                <use xlink:href="#checkmark"></use>
                                            </svg>
                                        </span>
                                        <span class="user__change-form-checkbox-text">
                                            Я — арбитражный управляющий
                                        </span>
                                    </label>
                                </div>
                            </div>


                            <div class="user__change-form-row">
                                <label for="oldpassword" class="user__change-form-label">
                                    Старый пароль
                                </label>
                                <div class="user__change-form-input-wrapper">
                                    <input type="password" name="oldpassword" id="oldpassword" class="user__change-form-input"
                                        required placeholder="Старый пароль">
                                </div>
                            </div>
                            <div class="user__change-form-row">
                                <label for="password" class="user__change-form-label">
                                    Новый пароль
                                </label>
                                <div class="user__change-form-input-wrapper">
                                    <input type="password" name="password" id="password" class="user__change-form-input"
                                        required placeholder="Новый пароль">
                                </div>
                            </div>
                            <div class="user__change-form-row">
                                <label for="passwordconfirmation" class="user__change-form-label">
                                    Повторите новый пароль
                                </label>
                                <div class="user__change-form-input-wrapper">
                                    <input type="password" name="passwordconfirmation" id="passwordconfirmation" class="user__change-form-input"
                                        required data-parsley-equalto="#password" placeholder="Повторите пароль">
                                </div>
                            </div>
                            <button type="submit" class="btn user__change-form-submit">
                                Сохранить
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{{/content}}
{{/extend}}