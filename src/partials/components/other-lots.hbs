<section class="other-lots js-other-lots-tabs">
    <div class="container">
        <div class="inner-container">
            <h2 class="other-lots__heading">
                Возможно вас заинтересует
            </h2>
            <div class="other-lots__nav">
                <a href="#" class="other-lots__nav-link js-tabs-nav">
                    Из этой категории
                </a>
                <a href="#" class="other-lots__nav-link js-tabs-nav">
                    От этого организатора
                </a>
            </div>
            <div class="other-lots__content">
                <div class="other-lots__content-item js-tabs-item">
                    <div class="other-lots__slider js-other-lots-slider">
                        <div class="swiper-container">
                            <div class="swiper-wrapper">
                                {{#each sliderLots}}
                                <div class="swiper-slide">
                                    {{#unless this.specialCard}}
                                    <div class="lot-card {{#if this.sold}} lot-card--sold {{/if}} {{#if this.noPhoto}} lot-card--no-photo {{/if}}"
                                        style="--lot-progress: {{this.progress}};"
                                        ie-style="--lot-progress: {{this.progress}};">
                                        <div class="lot-card__image-container">
                                            <a href="#" class="lot-card__image-link">
                                                <img src="{{this.image}}" alt="" class="lot-card__image">
                                            </a>

                                            <div class="lot-card__indicators">
                                                <div class="lot-card__indicators-top-row">
                                                    <div class="lot-card__indicators-items">
                                                        {{#if this.newLot}}
                                                        <div class="lot-card__indicators-new-lot">
                                                            Новый<br>
                                                            лот
                                                        </div>
                                                        {{/if}}
                                                        {{#if this.bestPrice}}
                                                        <div class="lot-card__indicators-best-price">
                                                            Лучшая<br>
                                                            цена
                                                        </div>
                                                        {{/if}}
                                                        {{#if this.hasReport}}
                                                        <div class="lot-card__indicators-has-report">
                                                            Есть<br>
                                                            отчет
                                                        </div>
                                                        {{/if}}
                                                    </div>
                                                    <a href="#" class="lot-card__like-btn">
                                                        <svg width="18" height="14" aria-hidden="true"
                                                            class="icon-heart">
                                                            <use xlink:href="#heart"></use>
                                                        </svg>
                                                    </a>
                                                </div>
                                                <div class="lot-card__indicators-bottom-row">
                                                    <div class="lot-card__remaining-time">
                                                        <div class="lot-card__remaining-time-progress-circle">
                                                            <svg width="200" height="200" viewBox="0 0 200 200"
                                                                xmlns="http://www.w3.org/2000/svg">
                                                                <circle cy="100" cx="100" r="80" fill="transparent"
                                                                    stroke="white" stroke-opacity="0.3"
                                                                    stroke-width="20">
                                                                </circle>
                                                                <circle cy="100" cx="100" r="80" fill="transparent"
                                                                    stroke="white" stroke-width="20"
                                                                    stroke-dasharray="500">
                                                                </circle>
                                                            </svg>
                                                        </div>
                                                        {{this.progressText}}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="lot-card__content">
                                            <div class="lot-card__price-block">

                                                <a href="#" class="lot-card__price-wrapper">
                                                    <div class="lot-card__new-price">
                                                        {{this.newPrice}} ₽
                                                    </div>
                                                    {{#unless this.sold}}
                                                    <div
                                                        class="lot-card__trend {{#if this.upTrend }} lot-card__trend--up {{/if}}">
                                                        <svg width="10" height="6" aria-hidden="true"
                                                            class="icon-down-trend">
                                                            <use xlink:href="#down-trend"></use>
                                                        </svg>
                                                    </div>
                                                    {{/unless}}
                                                </a>
                                                <div class="lot-card__trade-category">
                                                    Банкротные торги
                                                </div>
                                                {{#unless this.sold}}
                                                {{#if this.oldPrice}}
                                                <a href="#" class="lot-card__old-price">
                                                    {{this.oldPrice}} ₽
                                                </a>
                                                {{/if}}
                                                <div class="lot-card__old-price-text">
                                                    минимальная цена
                                                </div>
                                                {{/unless}}

                                                {{#if this.sold}}
                                                <a href="#" class="lot-card__sold-out">
                                                    Продано
                                                </a>
                                                {{/if}}

                                            </div>
                                            <div class="lot-card__title-wrapper">
                                                <h3 class="lot-card__title">
                                                    <a href="#">
                                                        {{this.title}}
                                                    </a>

                                                </h3>


                                                {{#if this.type}}
                                                <div class="lot-card__type">
                                                    <span class="lot-card__type-category">
                                                        Банкротное имущество •
                                                    </span>
                                                    {{this.type}}
                                                </div>
                                                {{/if}}


                                                <div class="lot-card__bottom-links">
                                                    {{#if this.partner}}
                                                    <a href="#" class="lot-card__partner">
                                                        <img src="{{ this.partner }}" alt=""
                                                            class="lot-card__partner-image" />
                                                    </a>
                                                    {{/if}}

                                                    <a href="#" class="lot-card__bottom-like-btn">
                                                        <svg width="18" height="14" aria-hidden="true"
                                                            class="icon-heart">
                                                            <use xlink:href="#heart"></use>
                                                        </svg>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                    {{/unless}}
                                    {{#if this.specialCard}}
                                    <a href="#" class="lot-special-card">
                                        <img src="{{ this.specialCardImage }}" alt="" class="lot-special-card__image">
                                        <h3 class="lot-special-card__title">
                                            <strong>
                                                {{this.specialCardNumber}}
                                            </strong>
                                            {{this.specialCardText}}
                                        </h3>
                                    </a>
                                    {{/if}}
                                </div>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="other-lots__content-item js-tabs-item">
                    <div class="other-lots__slider js-other-lots-slider">
                        <div class="swiper-container">
                            <div class="swiper-wrapper">
                                {{#each sliderLots}}
                                <div class="swiper-slide">
                                    {{#unless this.specialCard}}
                                    <div class="lot-card" style="--lot-progress: {{this.progress}};"
                                        ie-style="--lot-progress: {{this.progress}};">
                                        <div class="lot-card__image-container">
                                            <a href="#" class="lot-card__image-link">
                                                <img src="{{this.image}}" alt="" class="lot-card__image">
                                            </a>

                                            <div class="lot-card__indicators">
                                                <div class="lot-card__indicators-top-row">
                                                    {{#if this.newLot}}
                                                    <div class="lot-card__indicators-new-lot">
                                                        Новый<br>
                                                        лот
                                                    </div>
                                                    {{/if}}
                                                    {{#if this.bestPrice}}
                                                    <div class="lot-card__indicators-best-price">
                                                        Лучшая<br>
                                                        цена
                                                    </div>
                                                    {{/if}}

                                                    <a href="#" class="lot-card__like-btn">
                                                        <svg width="18" height="14" aria-hidden="true"
                                                            class="icon-heart">
                                                            <use xlink:href="#heart"></use>
                                                        </svg>
                                                    </a>
                                                </div>
                                                <div class="lot-card__indicators-bottom-row">
                                                    <div class="lot-card__remaining-time">
                                                        <div class="lot-card__remaining-time-progress-circle">
                                                            <svg width="200" height="200" viewBox="0 0 200 200"
                                                                xmlns="http://www.w3.org/2000/svg">
                                                                <circle cy="100" cx="100" r="80" fill="transparent"
                                                                    stroke="white" stroke-opacity="0.3"
                                                                    stroke-width="20">
                                                                </circle>
                                                                <circle cy="100" cx="100" r="80" fill="transparent"
                                                                    stroke="white" stroke-width="20"
                                                                    stroke-dasharray="500">
                                                                </circle>
                                                            </svg>
                                                        </div>
                                                        {{this.progressText}}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="lot-card__content">
                                            <div class="lot-card__price-block">
                                                {{#unless this.sold}}
                                                <div class="lot-card__price-wrapper">
                                                    <div class="lot-card__new-price">
                                                        {{this.newPrice}} ₽
                                                    </div>
                                                    <div
                                                        class="lot-card__trend {{#if this.upTrend }} lot-card__trend--up {{/if}}">
                                                        <svg width="10" height="6" aria-hidden="true"
                                                            class="icon-down-trend">
                                                            <use xlink:href="#down-trend"></use>
                                                        </svg>
                                                    </div>
                                                </div>

                                                {{#if this.oldPrice}}
                                                <div class="lot-card__old-price">
                                                    {{this.oldPrice}} ₽
                                                </div>
                                                {{/if}}
                                                {{/unless}}

                                                {{#if this.sold}}
                                                <div class="lot-card__sold-out">
                                                    Продано
                                                </div>
                                                {{/if}}

                                            </div>
                                            <div class="lot-card__title-wrapper">
                                                <h3 class="lot-card__title">
                                                    <a href="#">
                                                        {{this.title}}
                                                    </a>

                                                </h3>


                                                {{#if this.type}}
                                                <div class="lot-card__type">
                                                    {{this.type}}
                                                </div>
                                                {{/if}}
                                            </div>
                                        </div>

                                    </div>
                                    {{/unless}}
                                    {{#if this.specialCard}}
                                    <a href="#" class="lot-special-card">
                                        <img src="{{ this.specialCardImage }}" alt="" class="lot-special-card__image">
                                        <h3 class="lot-special-card__title">
                                            <strong>
                                                {{this.specialCardNumber}}
                                            </strong>
                                            {{this.specialCardText}}
                                        </h3>
                                    </a>
                                    {{/if}}
                                </div>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>